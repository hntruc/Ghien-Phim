<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/favorite_img"
    tools:context=".search">

    <LinearLayout
        android:id="@+id/search_1"
        android:layout_width="415dp"
        android:layout_height="100dp"
        android:background="#FCF9EE"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:contentDescription="@string/his_name1"
            app:srcCompat="@drawable/demo_film" />

        <TextView
            android:id="@+id/tvFilmname"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_weight="0"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="@string/his_name1"
            android:textSize="18sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:text="@string/rating_point"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/tvStar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:paddingStart="1dp"
            android:paddingEnd="20dp"
            app:srcCompat="@drawable/star" />
    </LinearLayout>


</androidx.cardview.widget.CardView>