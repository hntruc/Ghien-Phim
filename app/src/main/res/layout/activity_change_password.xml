<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/change_pass"
        app:layout_constraintVertical_chainStyle="spread"
        tools:context=".change_password">
        <Button
            android:id="@+id/return_changeP"
            android:layout_width="51dp"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/return_button"
            android:theme="@style/normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="121dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/register_logo" />

        <EditText
            android:id="@+id/new_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_button_green"
            android:backgroundTint="#2F4634"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/confirm_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/new_pas"
            app:layout_constraintTop_toBottomOf="@+id/cur_edit"
            app:layout_constraintVertical_bias="0.592" />

        <EditText
            android:id="@+id/cur_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_button_green"
            android:backgroundTint="#2F4634"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword"
            android:shadowColor="#878181"
            android:shadowDy="10"
            android:shadowRadius="10"
            app:layout_constraintBottom_toTopOf="@+id/new_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/cur_pass"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintVertical_bias="0.499"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/cur_pass"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:text="Mật khẩu hiện tại: "
            android:textAlignment="center"
            android:textColor="#0B1E1C"
            android:textSize="18sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/new_pas"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <TextView
            android:id="@+id/new_pas"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:text="Mật khẩu mới:"
            android:textAlignment="center"
            android:textColor="#0C1514"
            android:textSize="18sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/confirm_pass"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cur_pass" />

        <TextView
            android:id="@+id/confirm_pass"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:text="Xác nhận mật khẩu: "
            android:textAlignment="center"
            android:textColor="#101918"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_xacnhan"
            app:layout_constraintEnd_toStartOf="@+id/confirm_edit"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_pas" />

        <EditText
            android:id="@+id/confirm_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_button_green"
            android:backgroundTint="#2F4634"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/btn_xacnhan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/confirm_pass"
            app:layout_constraintTop_toBottomOf="@+id/new_edit"
            app:layout_constraintVertical_bias="0.681" />

        <Button
            android:id="@+id/btn_xacnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F4634"
            android:text="XÁC NHẬN"
            android:textColor="#E8E4E4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.821" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/copyright"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:translationY="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_xacnhan"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>