<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--TODO (STEP 3: Create a custom theme with no actionbar.)-->
    <!--START-->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">85dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">85dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/round_button_lightyellow</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">#363A43</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="register_text">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="edit_text">
        <item name="android:background">@drawable/round_button_lightyellow</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">#363A43</item>
        <item name="android:textColorHint">@color/black</item></style>

    <style name= "btn_normal" >
        <item name="android:background">@drawable/round_button_green</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">#31FFEB3B</item>
        <item name="android:textColorHint">@color/black</item></style>


    <!--END-->

</resources>